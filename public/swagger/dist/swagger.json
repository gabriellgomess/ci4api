{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Produtos",
        "description": "API de Produtos",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost",
            "description": "Servidor Local"
        }
    ],
    "paths": {
        "/produtos": {
            "get": {
                "tags": ["Produtos"],
                "summary": "Listar Produtos",
                "description": "Listar Produtos",
                "operationId": "listarProdutos",
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produtos"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Produtos"],
                "summary": "Cadastrar Produto",
                "description": "Cadastrar Produto",
                "operationId": "cadastrarProduto",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/NewProduto"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Produto criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro na criação do produto"
                    }
                }
            }
        },
        "/produtos/{id}": {
            "get": {
                "tags": ["Produtos"],
                "summary": "Buscar Produto pelo ID",
                "description": "Buscar Produto pelo ID",
                "operationId": "buscarProduto",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado"
                    }
                }
            },
            "put": {
                "tags": ["Produtos"],
                "summary": "Atualizar Produto",
                "description": "Atualizar Produto",
                "operationId": "atualizarProduto",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateProduto"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado"
                    }
                }
            },
            "delete": {
                "tags": ["Produtos"],
                "summary": "Deletar Produto",
                "description": "Deletar Produto",
                "operationId": "deletarProduto",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto deletado com sucesso"
                    },
                    "404": {
                        "description": "Produto não encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Produto": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nome": {
                        "type": "string"
                    },
                    "valor": {
                        "type": "number",
                        "format": "float"
                    }
                }
            },
            "NewProduto": {
                "type": "object",
                "required": ["nome", "valor"],
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "valor": {
                        "type": "number",
                        "format": "float"
                    }
                }
            },
            "UpdateProduto": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "valor": {
                        "type": "number",
                        "format": "float"
                    }
                }
            },
            "Produtos": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Produto"
                }
            }
        }
    }
}
